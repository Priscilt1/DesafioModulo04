{% extends "layout.njk" %}

{% block content %}

<div class="card">

        <section 
            class="avatar" 
            style="background: url({{teacher.avatar_url}}) no-repeat center center / cover">
        </section>

        <section class="details">
                <form method="POST" action="/teachers?_method=PUT">
                <h3>Editar Professor</h3>

                {# o include inclui um arquivo externo de bloco de codigo #}
                {% include 'teachers/fields.njk'%}

                {# incluindo o id de forma oculta no front-end #}
                <input 
                    type="hidden" 
                    name="id" 
                    value={{teacher.id}}
                >
            </form>


</div>

{% endblock content %}